/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

html {
    height: auto;
    max-width: 100%;
    overflow-x: hidden;
    min-height: 100%;
}

body {
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    margin-bottom: 85px;
}

.input {
    @apply text-center
}

input[type=text] {
    all: unset
}

input[type=number] {
    all: unset
}